<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="30dp"
                android:startColor="@color/button_yellow_dark"
                android:centerColor="@color/button_yellow_middle"
                android:endColor="@color/button_yellow_light" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4.4dp"
                android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>